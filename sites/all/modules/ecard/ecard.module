/**
 * Function for making cron job
 */

function ecard_cron() {
  // convert cron days into timestamp
  $ecard_cron = variable_get('ecard_cron', '0') * 86400;
  // delete ecards older than setting
  if (!empty($ecard_cron)) {
  db_query('DELETE FROM {ecard} WHERE send_time < %d', time() - $ecard_cron);
  }
}

